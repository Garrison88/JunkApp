<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_below="@id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_todays_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Date"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_todays_crew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Crew"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/journal_add_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Job"/>

        <Button
            android:id="@+id/journal_add_dump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Dump"/>

        <Button
            android:id="@+id/journal_add_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Fuel"/>

    </LinearLayout>

</RelativeLayout>