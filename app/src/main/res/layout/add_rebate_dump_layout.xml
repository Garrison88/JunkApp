<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    android:theme="@style/CustomDialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/material_spinner_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_rebate_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:dropDownWidth="@dimen/custom_spinner_width" />

                <Spinner
                    android:id="@+id/spinner_material_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:dropDownWidth="@dimen/custom_spinner_width" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rebate_amount_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_rebate_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Weight (kgs)"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/et_rebate_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Amount ($)"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/rebate_receipt_number_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_rebate_receipt_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Receipt Number"
                    android:inputType="number" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/add_rebate_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel_rebate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel" />

        <View
            android:layout_height="fill_parent"
            android:layout_width="1dp"
            android:background="#505154"
            android:layout_marginBottom="7dp" android:layout_marginTop="7dp"/>

        <Button
            android:id="@+id/btn_save_rebate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:background="?android:attr/selectableItemBackground"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>