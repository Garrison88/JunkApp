<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28abe3"
    style="?android:buttonBarStyle">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dash_layout"
        android:background="#db3340">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/company_name"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:textSize="35sp"
            android:text="@string/tv_company_name"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/btn_phone"
            android:src="@drawable/old_phone"
            android:layout_toRightOf="@+id/company_name"
            android:layout_toEndOf="@+id/company_name"
            style="?android:buttonBarButtonStyle"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Select a Dump:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center_horizontal|center_vertical" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_dumps"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="?android:buttonBarStyle">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:background="#1fda9a"
            android:textColor="#000000"
            android:id="@+id/btn_dump_directions"
            style="?android:buttonBarButtonStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hours &amp; Rate"
            android:background="#1fda9a"
            android:textColor="#000000"
            android:id="@+id/btn_dump_info"
            style="?android:buttonBarButtonStyle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dump_gross_cost"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:text="Gross Cost:"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="35sp"
                android:gravity="center_horizontal"
                android:id="@+id/tv_gross_cost_number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            style="?android:buttonBarStyle">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Enter Weight in Tons"
            android:id="@+id/et_enter_weight"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Cost"
            android:background="#1fda9a"
            android:textColor="#000000"
            android:id="@+id/btn_calculate_dump"
            style="?android:buttonBarButtonStyle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/tv_dump_net_cost"
                android:gravity="center_horizontal"
                android:text="Net Cost:"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:id="@+id/tv_net_cost_number"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dumps_clear"
        android:text="Clear"
        android:background="#1fda9a"
        android:textColor="#000000"
        style="?android:buttonBarButtonStyle"/>

</LinearLayout>