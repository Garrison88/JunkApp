<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--<ScrollView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/scrollView">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/et_ssid_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_ssid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="SSID"
                    android:inputType="number"
                    android:maxLength="5" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <LinearLayout
                android:id="@+id/sales_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:id="@+id/et_gross_sale_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_gross_sale"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:hint="Gross Sale"
                        android:inputType="numberDecimal" />

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:id="@+id/et_net_sale_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_net_sale"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:hint="Net Sale"
                        android:inputType="numberDecimal" />

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/receipt_and_paytype_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:id="@+id/et_receipt_number_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_receipt_number"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@id/et_net_sale_wrapper"
                        android:hint="Receipt #"
                        android:inputType="number" />

                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <Spinner
                    android:id="@+id/spinner_pay_type"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/et_job_notes_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_job_notes"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:hint="Notes (optional)"
                    android:inputType="textAutoCorrect|textCapSentences|textMultiLine" />

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <ProgressBar
                android:id="@+id/add_job_pbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_save_job"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Save" />

        </LinearLayout>

    <!--</ScrollView>-->



</RelativeLayout>