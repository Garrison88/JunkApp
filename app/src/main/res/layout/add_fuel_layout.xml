<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/et_fuel_vendor_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_fuel_vendor"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:hint="Fuel Vendor"
            android:inputType="textCapWords" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/et_fuel_net_cost_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_fuel_cost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Cost"
            android:inputType="numberDecimal" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/et_fuel_receipt_number_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_fuel_receipt_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_fuel_cost"
            android:hint="Receipt Number"
            android:inputType="textNoSuggestions|textVisiblePassword" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <include
        android:id="@+id/fuel_cancel_save_button_bar"
        layout="@layout/cancel_save_button_bar_layout" />

</LinearLayout>