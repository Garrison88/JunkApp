<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/et_add_dump_weight_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_dump_dialog"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"/>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_add_dump_weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kgs)"
                android:inputType="number"
                android:maxLength="4" />


        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dump_cost_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_add_dump_weight_wrapper">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Gross Cost"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_dump_gross_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Net Cost"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_dump_net_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/et_dump_receipt_number_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dump_cost_layout">

        <EditText
            android:id="@+id/et_dump_receipt_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Receipt Number"
            android:inputType="number" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/et_percent_previous_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_dump_receipt_number_wrapper">

        <EditText
            android:id="@+id/et_percent_previous"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Percent Previous (optional)"
            android:inputType="number"
            android:maxLength="3" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_percent_previous_wrapper"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_dump"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="Cancel" />

        <Button
            android:id="@+id/btn_save_dump"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save" />

    </LinearLayout>

</RelativeLayout>