<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="MyMaterialTheme_v21" parent="MyMaterialTheme.NoActionBar">

        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:fontFamily">roboto-light</item>
    </style>

    <!--<style name="RobotoSpinnerStyle" parent="android:style/Widget.Material.Spinner" />-->

    <style name="TestSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:padding">2dp</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>